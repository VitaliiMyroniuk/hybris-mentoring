<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration xmlns="hybris.de/schemas/hmc/generic"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">

    <explorertree>
        <group name="medias" mode="append">
            <typeref type="ImageMedia" description="type.ImageMedia.description"/>
        </group>
    </explorertree>

    <type name="ImageMedia" mode="append">
        <organizer>
            <search mode="replace">
                <condition attribute="code"/>
                <condition attribute="mime"/>
                <condition attribute="topic"/>
            </search>
            <result>
                <listview mode="replace">
                    <itemlayout>
                        <attribute name="code"/>
                        <attribute name="mime"/>
                        <attribute name="topic"/>
                    </itemlayout>
                </listview>
            </result>
            <editor>
                <essentials>
                    <listlayout>
                        <attribute name="code"/>
                    </listlayout>
                </essentials>
                <tab name="tab.topic">
                    <section name="section.common">
                        <listlayout>
                            <attribute name="topic"/>
                        </listlayout>
                    </section>
                </tab>
            </editor>
        </organizer>
    </type>

</configuration>